---
import Section from "../Section.astro";

type NavigationItem = {
  path: string;
  label: string;
};

type NavigationGroup = {
  title: string;
  items: Array<NavigationItem>;
};

const tree: Array<NavigationGroup> = [
  {
    title: "Overview",
    items: [
      {
        path: "/",
        label: "Landing",
      },
      {
        path: "https://github.com/tempblade/creator",
        label: "GitHub",
      },
      {
        path: "https://tempblade.com",
        label: "tempblade",
      },
    ],
  },
  {
    title: "Legal",
    items: [{ path: "/legal/imprint", label: "Imprint" }],
  },
];
---

<footer class="bg-neutral-accent">
  <Section>
    <div class="flex flex-row flex-wrap gap-12">
      {
        tree.map((group) => (
          <div>
            <h3 class="mb-2">{group.title}</h3>
            <div class="flex flex-col">
              {group.items.map((item) => (
                <a href={item.path}>{item.label}</a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </Section>
</footer>
